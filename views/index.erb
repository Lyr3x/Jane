    <div class="container">
    	<h1 class="text-center">Jarvis</h1>
    	<div class="row">
    		<div class="col-xs-10 col-md-4 col-sm-6 col-xs-offset-1 col-md-offset-4 col-sm-offset-3">
    			<!-- actions -->
    			<h3><span class="glyphicon glyphicon-star"></span>  actions</h3>
    			<div class="well">
	    			<button type="button" class="btn btn-info btn-lg btn-block" onclick="">demo</button>
    			</div>

    			<!-- power -->
    			<h3><span class="glyphicon glyphicon-off"></span>  power</h3>
    			<div class="well">
	    			<button type="button" class="btn btn-warning btn-lg btn-block" onclick="power()">all</button>
	    			<button type="button" class="btn btn-warning btn-lg btn-block" onclick="power('tv')">tv</button>
	    			<button type="button" class="btn btn-warning btn-lg btn-block" onclick="power('avr')">avr</button>
	    			<button type="button" class="btn btn-warning btn-lg btn-block" onclick="power('htpc')">htpc</button>
	    		</div>

    			<!-- tv -->
    			<h3><span class="glyphicon glyphicon-film"></span>  tv</h3>
    			<div class="well">
	    			<button type="button" class="btn btn-success btn-lg btn-block" onclick="power()">input hdmi1</button>
	    			<button type="button" class="btn btn-success btn-lg btn-block" onclick="power('tv')">input hdmi2</button>
	    			<button type="button" class="btn btn-success btn-lg btn-block" onclick="power('avr')">input dvb-t</button>
    			</div>
    			
    			<!-- avr -->
    			<h3><span class="glyphicon glyphicon-music"></span>  avr</h3>
    			<div class="well">
	    			<button type="button" class="btn btn-default btn-lg btn-block" onclick="">input htpc</button>
	    			<button type="button" class="btn btn-default btn-lg btn-block" onclick="">input game</button>
	    			<button type="button" class="btn btn-default btn-lg btn-block" onclick="">input tv</button>
    			</div>

    			<!-- htpc -->
    			<h3><span class="glyphicon glyphicon-hdd"></span>  htpc</h3>
    			<div class="well">
	    			<button type="button" class="btn btn-primary btn-lg btn-block" onclick="">play/pause</button>
	    			<button type="button" class="btn btn-primary btn-lg btn-block" onclick="">stop</button>
	    			<button type="button" class="btn btn-primary btn-lg btn-block" onclick="">action 1</button>
    			</div>

    		</div>
		</div>
	</div>
    

    <!-- call jarvis functions in background on button click -->
	<script>
		function power(device){
		if ('undefined' === typeof device) {
			$.get("power");
		}else{
			var device = device.concat("_power");
			$.get(device);
		}
		
	}
	</script>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
