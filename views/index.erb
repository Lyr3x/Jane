    <div class="container">
    	<div class="row">
    		<div class="col-xs-10 col-md-4 col-sm-6 col-xs-offset-1 col-md-offset-4 col-sm-offset-3">
    			<h3><span class="glyphicon glyphicon-off"></span>  power</h3>
    			<div class="well">
	    			<button type="button" class="btn btn-primary btn-lg btn-block" onclick="power()">all</button>
	    			<button type="button" class="btn btn-primary btn-lg btn-block" onclick="power('tv')">tv</button>
	    			<button type="button" class="btn btn-primary btn-lg btn-block" onclick="power('avr')">avr</button>
	    			<button type="button" class="btn btn-primary btn-lg btn-block" onclick="power('htpc')">htpc</button>
    			</div>
    		</div>
		</div>
	</div>
    

    <!-- call jane functions in background on button click -->
	<script>
		function power(device){
		if ('undefined' === typeof device) {
			$.get("power");
		}else{
			var device = device.concat("_power");
			$.get(device);
		}
		
	}
	</script>

