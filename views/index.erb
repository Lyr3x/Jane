    <![endif]-->
  </head>
  <body>
    <div class="container">
        <h1 class="text-center">Jane</h1>
        <div class="row">
            <div class="col-xs-10 col-md-4 col-sm-6 col-xs-offset-1 col-md-offset-4 col-sm-offset-3">
                
                <!-- actions -->
                <h3><span class="glyphicon glyphicon-star"></span>  actions</h3>
                <div class="well">
                    <button type="button" class="btn btn-info btn-lg btn-block" onclick="power()">power all</button>
                    <!-- <button type="button" class="btn btn-info btn-lg btn-block" onclick="power('tv')">power tv</button> -->
                </div>

            </div>
        </div>
    </div>
    

    <!-- call jane functions in background on button click -->
    <script>
        function power(device){
        if ('undefined' === typeof device) {
            $.get("power");
        }else{
            var device = device.concat("_power");
            $.get(device);
        }
        
        function action(name){
            var name = "action_" + name;
            $.get(name);
        }
    }
    </script>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>
